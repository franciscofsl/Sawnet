<div class="icon-container" style="font-size: @($"{Size}px"); color: @Color; @(IsCircular ? $"border-radius: 50%;" : "")">
    <i class="@CssClass"></i>
</div>


@code {
    [Parameter] public bool IsCircular { get; set; } = true;

    [Parameter] public string Color { get; set; } = "black";

    [Parameter] public string CssClass { get; set; }

    [Parameter] public int Size { get; set; } = 16;
}